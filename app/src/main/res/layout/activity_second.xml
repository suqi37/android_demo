<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:backgroundTint="@android:color/transparent"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/ocrResult"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/emptyText"
            >
            <EditText
                android:id="@+id/SecondEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B7E8F5"
                >
            </EditText>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ocrResult"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:onClick="btn_back_click"
                    >
                </Button>
                <Button
                    android:id="@+id/btn_query_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询"
                    android:onClick="btn_searchName_click"
                    >
                </Button>
<!--                <Button-->
<!--                    android:id="@+id/btn_insert"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="插入"-->
<!--                    android:onClick="btn_insert_click"-->
<!--                    >-->
<!--                </Button>-->

<!--                <Button-->
